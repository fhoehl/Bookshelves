---
layout: layouts/base.njk
---
<section class="text-primary-700">
  <div class="grid grid-cols-12 gap-y-4 gap-x-8">
    <h1 class="text-4xl font-serif col-span-8">{{ title }}</h1>

    <dl class="leading-relaxed col-span-8 grid grid-cols-8">
      <div class="col-span-2">
        <dt class="font-semibold">Rating</dt>
        <dd class="inline">{{ rating }}</dd>
      </div>
      <div class="col-span-2">
        <dt class="font-semibold">Read</dt>
        <dd>{{ read | postDate }}</dd>
      </div>
    </dl>

    <div class="row-start-1 row-span-3 col-start-9 col-span-4 h-80">
      <img class="max-h-full" src="https://covers.openlibrary.org/b/isbn/{{ isbn }}-L.jpg" />
    </div>

    <h2 class="text-2xl mt-4 col-span-12">Notes</h2>

    <div class="col-span-12 prose prose-zinc font-serif">
      {% if content %}
        {{ content | safe }}
      {% else %}
        n/a
      {% endif %}
    </div>
  </div>
</section>
